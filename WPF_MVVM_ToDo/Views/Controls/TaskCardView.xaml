<UserControl x:Class="WPF_MVVM_ToDo.Views.Controls.TaskCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_MVVM_ToDo.Views.Controls"
             xmlns:fa="http://schemas.fontawesome.com/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="105" d:DesignWidth="150"
             Height="105" Width="140">
    <Grid>
        <Border Background="#C9CAEE" CornerRadius="14">
            <Border.Resources>
            </Border.Resources>
            <StackPanel>
                <fa:ImageAwesome Icon="Solid_Coffee" 
                                 Height="14"
                                 HorizontalAlignment="Left"
                                 Margin="8 16 0 32"/>
                <TextBlock Text="{Binding Task.Title, FallbackValue=Title}"
                           Foreground="#111315"
                           FontFamily="{StaticResource Inter}"
                           FontSize="16"
                           HorizontalAlignment="Left"
                           Margin="8 0 0 0"/>
                <TextBlock Text="Today"
                           Foreground="#626262"
                           HorizontalAlignment="Left"
                           Margin="8 0 0 0"
                           FontSize="10"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
